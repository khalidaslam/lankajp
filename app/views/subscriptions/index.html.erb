<h1>Listing subscriptions</h1>

<table>
  <tr>
    <th>Fullname</th>
    <th>Email</th>
    <th>Issubscribed</th>
    <th>Subscribedtags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subscriptions.each do |subscription| %>
  <tr>
    <td><%= subscription.fullname %></td>
    <td><%= subscription.email %></td>
    <td><%= subscription.issubscribed %></td>
    <td><%= subscription.subscribedtags %></td>
    <td><%= link_to 'Show', subscription %></td>
    <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
    <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

