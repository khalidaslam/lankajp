<% 
    content_for :title, " #{@job.title} at  #{@job.companyname} for #{@job.worktype.name} position in #{@job.city.name} "

%>
<hr class="topbar"/>
<br /><br />


<div class="container well">
<% if flash[:notice] %>
<div style="text-align:center;">
<button class="btn btn-primary btn-sm" onclick="closeWin()">Job Application Sent &nbsp;&nbsp;&nbsp; Click to Close </button>
</div>
<% end %>       
<script>
var myWindow;

function closeWin()
{
window.open('', '_self', '');
window.close(); 
}
</script>
    <div class="row">
          <div class="col-md-12">

            <br />
            <h4 style="text-align:center; text-decoration:underline;"><%= @job.title %> at <%=@job.companyname%> for <%=@job.worktype.name%> in <%=@job.city.name%></h4>
            <%= image_tag(@job.adimage.url(:original), :style => "text-align:center;  margin: 0 auto;", :class => "img-responsive", :alt => "#{@job.title}") %>
            <br /><br />

            <div style="text-align:center;">
            <%= link_to "Apply for this Job", new_job_job_application_path(@job), :class => "btn btn-primary", :target => '_blank' %><br /><br />
              <small><b>* Please make sure to read job selection criteria first and only apply for job if you geniunely meet selection criteria.</b></small>
             

              <% if user_signed_in? && current_user.isadmin == true %>
               </br>
              <small><b>See Application on this job at <%=root_url%>employer/link?utf8=âœ“&linkcode=<%=@job.employerlinkcode %> </b></small>
              <% end %>
            </div>


          </div>
    </div>


    <div class="row">
        <br /> <br />
        <div class="col-sm-7">
            <h4>Job Advertisement in Text:</h4>

            <div class="row">

                <div class="col-xs-12">
                    <table class="table">

                        <tbody>
                            <tr>
                                <th>Title:</th>
                                <td><%= @job.title %></td>
                            </tr>

                            <tr>
                                <th>Location:</th>
                                <td><%= @job.city.name %></td>
                            </tr>

                            <tr>
                                <th>Classification:</th>
                                <td><%= @job.classification.name %></td>
                            </tr>   

                            <tr>
                                <th>Salary:</th>
                                <td><%= @job.salary.salaryrange %></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
            <p>
                <%= @job.jobdesctext.html_safe %>
            </p>
            <br /> <br /><br />
            <p>
                <strong>If you have been asked money in order to get this job or find this job inappropriate, please report by contacting us.</strong>
            </p>

            <p>Ad ref: <%= @job.jobuuid %> | Posted: <%= @job.created_at.strftime("%d %B, %Y") %></p>

            <p>
                <span class="classified_links ">
                    &nbsp;<a class="link-info " href="mailto:support@lankajobpost.com"><i class="fa fa-envelope-o"></i> support@lankajobpost.com</a></span>
            </p>

        </div>



        <div class="col-sm-5 hidden-xs">
           <div class="panel panel-default">
                <div class="panel-heading">Ads</div>
                <div class="panel-body">
                    
                    <div class="well">
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- side ad -->
                        <ins class="adsbygoogle"
                             style="display:inline-block;width:250px;height:250px"
                             data-ad-client="ca-pub-5930037028949782"
                             data-ad-slot="7142361352"></ins>
                        <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                        <% if false %>
                    <img src ="<%= asset_path 'cadsimg/AppThemesClassiPressBanner250x250.jpg'%>" class="img-responsive" style="margin:auto;">
                        <% end %>
                    </div>   

                </div>
            </div>
        </div>        

    </div>  



</div>

