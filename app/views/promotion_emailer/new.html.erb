<hr class="topbar"/>  

<div class="container">
    <div class="row">
        <div class="col-sm-3 hidden-xs">
            <div class="sidebar-account">	

                <div class="row hidden-xs">

                    <div class="col-lg-12">
                    		<div class="well">
                        			<div class="row ">
                                         <div class="col-lg-3">
                        			         <img src="<%= asset_path 'cadsimg/icons/Crest.png' %>" width="45"/>
                        				</div>
                            			<div class="col-lg-9">
                                            <h4 style="margin-top: 0">Free Job Post</h4>
                            			     <p>For a limited time, <span style="color:#2980b9;"><b>Lankajobpost.com</b></span> is offering <b>free job advertisements</b>. Each job stays online for <b>14 days</b>. You can receive applicant's resume at your email address directly. You can submit your <b>own designed ads</b> or we can design your ads for <b>no charge</b>.</p> 
                                             
                            			</div>
                                    </div>
                    		    </div>
                    		</div>
                    </div>
                </div>
        </div>

        <div class="col-sm-9">
        	<%= form_for(@promotion, :url => promotion_emailer_path, :html => {:class => "form-vertical", :autocomplete => "off", :multipart => "true"}) do |f| %>

				  <% if @promotion.errors.any? %>
				  <div class="alert alert-danger alert-dismissable">
  					<button style="color:#2c3e50;" type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> 
				    <div id="error_explanation">
				      <% @promotion.errors.full_messages.each do |msg| %>
				        <span style="color:#2c3e50;"><%= msg %></span><br />
				      <% end %>
				    </div>
				    </div>
				  <% end %>
					
                <div class="panel panel-default">
                    <div class="panel-heading">Create Job Post</div>
                    <div class="panel-body">


                        <div class="row">  
                            <div class="col-sm-12 "  >

                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-sm-12">
                                        	<%= f.label :subject, "Subject: *" %>
                                        	<%= f.text_field :subject, :autofocus => true, :class => "form-control"%>
                                        </div>
                                        <div class="col-sm-12"><br />
                                            <%= f.label :contactlist, "Email Address List: *" %>
                                        	<%= f.text_area :contactlist, :class => "form-control", :style => "resize: none;"%>
                                        </div>

                                        <div class="col-sm-12"><br />
                                            <%= f.label :body, "Message Body: *" %>
                                        	<%= f.text_field :body, :class => "form-control", :style => "resize: none;"%>
                                        </div>  

                                        <div class="col-sm-12"><br />
				                            <%= f.submit "Send Promotion", :class => "btn btn-primary pull-right" %>
				                        </div> 

                                    </div>
                                </div>

                            </div>			
                        </div>			
                    </div>			
                </div>
         
            <% end %> <!--End form--> 
        </div>

    </div><!-- First Row End -->
</div><!-- Container End-->

