<hr class="topbar"/>  

<div class="container">
    <div class="row">
        <div class="col-sm-3 hidden-xs">
            <div class="sidebar-account">	

                <div class="row hidden-xs">

                    <div class="col-lg-12">
                    		<div class="well">
                        			<div class="row ">
                                         <div class="col-lg-3">
                        			         <img src="<%= asset_path 'cadsimg/icons/Crest.png' %>" width="45"/>
                        				</div>
                            			<div class="col-lg-9">
                                            <h4 style="margin-top: 0">Free Job Post</h4>
                            			     <p>For a limited time, <span style="color:#2980b9;"><b>Lankajobpost.com</b></span> is offering <b>free job advertisements</b>. Each job stays online for <b>14 days</b>. You can receive applicant's resume at your email address directly. You can submit your <b>own designed ads</b> or we can design your ads for <b>no charge</b>. <br />
                                                You can also send your job ads at <b>jobads@lankajobpost.com</b>. </p> 
                                             
                            			</div>
                                    </div>
                    		    </div>
                    		</div>
                    </div>
                </div>
        </div>

        <div class="col-sm-9">
        	<%= form_for(@job_post, :url => job_posts_path, :html => {:class => "form-vertical", :autocomplete => "off", :multipart => "true"}) do |f| %>

				  <% if @job_post.errors.any? %>
				  <div class="alert alert-danger alert-dismissable">
  					<button style="color:#2c3e50;" type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> 
				    <div id="error_explanation">
				      <% @job_post.errors.full_messages.each do |msg| %>
				        <span style="color:#2c3e50;"><%= msg %></span><br />
				      <% end %>
				    </div>
				    </div>
				  <% end %>
					
                <div class="panel panel-default">
                    <div class="panel-heading">Your Details</div>
                    <div class="panel-body">


                        <div class="row">  
                            <div class="col-sm-12 "  >

                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-sm-12">
                                        	<%= f.label :fullname, "Full Name: *" %>
                                        	<%= f.text_field :fullname, :autofocus => true, :class => "form-control"%>
                                        </div>
                                        <div class="col-sm-12"><br />
                                            <%= f.label :email, "Email Address: *" %>
                                        	<%= f.text_field :email, :class => "form-control"%>
                                        </div>

                                        <div class="col-sm-12"><br />
                                            <%= f.label :contactno, "Contact Number: *" %>
                                        	<%= f.text_field :contactno, :class => "form-control"%>
                                        </div>    

                                        <% if false %>
                                        <div class="col-sm-12"><br />
                                        	<label>Receive Resumes At Your Email Address:</label><br />    
			                                    <%= f.check_box :cvemailoption %> Select if you wish to receive applicant's resume at my email address.
			                            </div>
                                        <% end %>

                                    </div>
                                </div>

                            </div>			
                        </div>			
                    </div>			
                </div>



                <div class="panel panel-default">
                    <div class="panel-heading">Upload Image File</div>
                    <div class="panel-body">


                        <div class="row">  
                            <div class="col-sm-12 "  >

                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-sm-12"><br />
                                        	<%= f.label :adimage, "Upoad Job Ad Image File" %>
                                        	<%= f.file_field :adimage %>
                                        </div>
                                        <small>&nbsp;&nbsp;&nbsp;&nbsp;* supported file type: Jpg/Jpeg/bmp/png/gif  OR  doc/docx/pdf <br />&nbsp;&nbsp;&nbsp;&nbsp;* max file size: 512KB
										</small><br /><br />


                                    </div>
                                </div>

                            </div>			
                        </div>			
                    </div>			
                </div>


                    <div class="panel panel-default">
                        <div class="panel-heading">Accept terms and Humanizer Question</div>
                            <div class="panel-body">

                            <div class="row">  
                                <div class="col-sm-12 ">

                                    <div class="form-group">
                                        <div class="row">

                                            <div class="col-sm-12">                                           
                                                <%= f.label :humanizer_answer, f.object.humanizer_question %>
                                                <%= f.text_field :humanizer_answer, :class => "form-control" %>
                                                <%= f.hidden_field :humanizer_question_id %>
                                            </div>


                                        </div>
                                    </div>

                                </div>          
                            </div>          


                                        

                            <div class="checkbox">


                                
                                <label>
                                    <%= f.check_box :terms %>  I agree to the terms and conditions and regulations. <br />My ad include necessary details regarding job. 
                                </label>

                            </div>

                            <br />
                            <%= f.submit "Send Job Post", :class => "btn btn-primary pull-right" %>
                            <p class="" style="text-align: left"><small>* Job Post approval subject to terms and conditions</small></p>
                        </div>
                    </div>
                </div>
            <% end %> <!--End form--> 
        </div>

    </div><!-- First Row End -->
</div><!-- Container End-->
